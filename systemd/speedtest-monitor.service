[Unit]
Description=Speedtest Monitor - Internet Speed Monitoring Service
Documentation=https://github.com/SokolovMO/speedtest_monitor
After=network-online.target
Wants=network-online.target

[Service]
Type=oneshot
User=root
Group=root
WorkingDirectory=/opt/speedtest-monitor
ExecStart=/opt/speedtest-monitor/.venv/bin/python -m speedtest_monitor.main

# Environment
Environment="PATH=/opt/speedtest-monitor/.venv/bin:/usr/local/bin:/usr/bin:/bin"

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=speedtest-monitor

# Security hardening
PrivateTmp=true
NoNewPrivileges=true
# Allow writing to the installation directory (for logs)
ReadWritePaths=/opt/speedtest-monitor

# Restart policy
Restart=on-failure
RestartSec=10s

[Install]
WantedBy=multi-user.target
